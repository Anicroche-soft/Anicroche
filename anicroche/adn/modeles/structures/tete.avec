@style [
    #tete {
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;

        padding: 1rem;

        backdrop-filter: blur(var(--d-blur));

        --b-fond: var(--c-analogue-trans);
        --c-fond: var(--c-analogue);
        --d-ecart: 2rem;
    }

    .grand #tete {
        width: 11rem;
    }

    .petit.portrait #tete {
        top: auto;
        right: 0;
    }
]

