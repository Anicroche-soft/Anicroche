@style [
    #menu {
        grid-area: 2 / 1 / 3 / 2;

        padding: var(--d-marge);

        --d-ecart: 2rem;
        --c-fond: var(--c-analogue);
    }

    .petit #menu span {
        display: none;
    }

    .petit #menu {
        justify-content: space-evenly;

        --d-ecart: 1rem;
    }

    .petit.portrait #menu {
        justify-content: space-around;
        flex-direction: row;
    }
]

