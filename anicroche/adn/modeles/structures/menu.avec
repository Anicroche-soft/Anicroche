@style [
    #menu {
        flex: 1;

        --d-ecart: 2rem;
    }

    #menu span {
        font-family: 'Eczar', serif;
        font-weight: 500;
    }

    .grand #menu .alt,
    .petit #menu span:not(.alt) {
        display: none;
    }

    .petit #menu {
        justify-content: flex-end;

        --d-ecart: 1rem;
    }

    .petit.portrait #menu {
        justify-content: space-around;
        flex-direction: row;
    }
]

