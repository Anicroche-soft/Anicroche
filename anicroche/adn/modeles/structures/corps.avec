@style [
    #corps {
        grid-area: 1 / 2 / 3 / 3;
        overflow: hidden;
        gap: 0;
    }

    .petit.portrait #corps {
        grid-area: 1 / 1 / 2 / 2;
    }

    #corps > nav {
        --b-fond: var(--b-degrade-vif);
        --c-fond: var(--c-vif);
        --c-flux: var(--c-analogue);
    }

    #corps > section {
        overflow: hidden;
        flex: 1;
    }

    .grand #corps {
        padding-left: 11rem;
    }

    .petit.paysage #corps {
        padding-left: 3.5rem;
    }

    .navigation {
        height: 3.5rem;
    }

    .page {
        overflow-y: auto;
        height: 100%;

    }

    .page > div {
        --b-fond: var(--c-theme);
        --c-fond: var(--c-theme);
        padding: 1rem;
    }

    .petit.portrait .page {
        padding-bottom: 3.5rem;
    }

    .page img {
        border-radius: 1rem;
    }
]

<main #corps>
    <nav>
        <div .navigation>
    <section>
        <div .page>
